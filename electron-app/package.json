{
  "name": "fga-ac-simulator-electron",
  "version": "1.0.0",
  "description": "Fujitsu AC Simulator with MQTT - Electron Version",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --no-sandbox --dev",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w serialport",
    "build": "npm run rebuild && electron-builder",
    "build:all": "npm run rebuild && electron-builder --linux --win",
    "build:linux": "npm run rebuild && electron-builder --linux",
    "build:win": "npm run rebuild && electron-builder --win",
    "build:mac": "npm run rebuild && electron-builder --mac",
    "build:docker": "./build.sh",
    "release": "npm run rebuild && electron-builder --publish always",
    "release:linux": "npm run rebuild && electron-builder --linux --publish always",
    "release:win": "npm run rebuild && electron-builder --win --publish always"
  },
  "keywords": [
    "fujitsu",
    "ac",
    "simulator",
    "mqtt",
    "electron"
  ],
  "author": {
    "name": "Nube IO",
    "email": "info@nube-io.com"
  },
  "homepage": "https://nube-io.com",
  "license": "MIT",
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "mqtt": "^5.3.4",
    "pg": "^8.16.3",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.nubeio.fga-simulator",
    "productName": "FGA_Simulator",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "NubeIO",
        "repo": "FGA-AC-Simulator"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "services/**/*",
      "config/**/*",
      "tools/**/*",
      "embedded/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/serialport/**/*",
      "node_modules/@serialport/**/*"
    ],
    "extraResources": [
      {
        "from": "tools/esptool",
        "to": "tools/esptool",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "embedded/esptool-binaries",
        "to": "embedded/esptool-binaries",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "embedded/nvs-binaries",
        "to": "embedded/nvs-binaries",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Nube IO <info@nube-io.com>",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}.exe"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
