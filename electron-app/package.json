{
  "name": "fga-ac-simulator-electron",
  "version": "1.0.0",
  "description": "Fujitsu AC Simulator with MQTT - Electron Version",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --no-sandbox --dev",
    "build": "electron-builder",
    "build:all": "electron-builder --linux --win",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:docker": "./build.sh"
  },
  "keywords": [
    "fujitsu",
    "ac",
    "simulator",
    "mqtt",
    "electron"
  ],
  "author": {
    "name": "Nube IO",
    "email": "info@nube-io.com"
  },
  "homepage": "https://nube-io.com",
  "license": "MIT",
  "dependencies": {
    "mqtt": "^5.3.4",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.nubeio.fga-simulator",
    "productName": "FGA_Simulator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "services/**/*",
      "config/**/*",
      "tools/**/*",
      "embedded/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "tools/esptool",
        "to": "tools/esptool",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "embedded/esptool-binaries",
        "to": "embedded/esptool-binaries",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "embedded/nvs-binaries",
        "to": "embedded/nvs-binaries",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "maintainer": "Nube IO <info@nube-io.com>",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg"
    }
  }
}
